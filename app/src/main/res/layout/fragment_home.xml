<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pozostały dystans -->
    <TextView
        android:id="@+id/text_remaining_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pozostało do celu: 0 m"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Informacje dzienne -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Pokonany dystans -->
        <TextView
            android:id="@+id/text_daily_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dystans: 0 m"
            android:layout_marginEnd="16dp" />

        <!-- Emisje CO2 -->
        <TextView
            android:id="@+id/text_daily_emissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO2: 0 kg"
            android:layout_marginEnd="16dp" />

        <!-- Koszt -->
        <TextView
            android:id="@+id/text_daily_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koszt: 0 zł" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_air_quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jakość powietrza: N/A"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />
</LinearLayout>
