<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.study.mastersdegree.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_fragmentExercise"
            app:destination="@id/fragmentExercise" />
    </fragment>
    <fragment
        android:id="@+id/fragmentStats"
        android:name="com.study.mastersdegree.ui.stats.FragmentStats"
        android:label="fragment_stats"
        tools:layout="@layout/fragment_stats" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.study.mastersdegree.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_fragmentStats"
            app:destination="@id/fragmentStats" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAbout"
        android:name="com.study.mastersdegree.ui.about.FragmentAbout"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_fragmentAbout_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentExercise"
        android:name="com.study.mastersdegree.ui.exercise.FragmentExercise"
        android:label="fragment_exercise"
        tools:layout="@layout/fragment_exercise" >
        <action
            android:id="@+id/action_fragmentExercise_to_fragmentAbout"
            app:destination="@id/fragmentAbout" />
    </fragment>

</navigation>